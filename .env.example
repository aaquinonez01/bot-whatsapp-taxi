# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taxi_cooperativa"

# Configuración de WhatsApp
WHATSAPP_PHONE="+593989815664"
USE_PAIRING_CODE=true

# Configuración del servidor
PORT=3008

# Configuración de solicitudes de taxi
REQUEST_TIMEOUT_MINUTES=10
CLEANUP_INTERVAL_MINUTES=30

# BuilderBot Baileys Provider (Configuración según docs oficiales)
EXPERIMENTAL_STORE=true
TIME_RELEASE=10800000

# Configuración de rendimiento simplificada
ENABLE_PARALLEL_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=5
BATCH_DELAY=2000
MAX_PARALLEL_BATCHES=2

# Google Maps API
GOOGLE_MAPS_API_KEY=""

# Configuración para producción
NODE_ENV=production