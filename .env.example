# Base de datos PostgreSQL
DATABASE_URL="postgresql://taxi_user:taxi_chat_bot@db_taxi:5432/taxi_db"

# Configuración de WhatsApp
WHATSAPP_PHONE="+593984199886"
USE_PAIRING_CODE=true

# Configuración del servidor
PORT=3008

# Configuración de solicitudes de taxi
REQUEST_TIMEOUT_MINUTES=10
CLEANUP_INTERVAL_MINUTES=30

# BuilderBot Baileys Provider (Configuración según documentación oficial)
EXPERIMENTAL_STORE=true
TIME_RELEASE=10800000

# BuilderBot Queue Configuration (según documentación oficial)
QUEUE_TIMEOUT=20000
QUEUE_CONCURRENCY_LIMIT=15

# Configuración de rendimiento para notificaciones
ENABLE_PARALLEL_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=8
BATCH_DELAY=1200
MAX_PARALLEL_BATCHES=2

# Google Maps API
GOOGLE_MAPS_API_KEY=""

# Configuración para producción
NODE_ENV=production