# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taxi_cooperativa"

# Configuración de WhatsApp
WHATSAPP_PHONE="+593989815664"
USE_PAIRING_CODE=true

# Configuración del servidor
PORT=3008

# Configuración de solicitudes de taxi
REQUEST_TIMEOUT_MINUTES=10
CLEANUP_INTERVAL_MINUTES=30

# Configuración de Baileys (optimizada para VPS 2 CPUs, 8GB RAM)
EXPERIMENTAL_STORE=true
TIME_RELEASE=900000

# Configuración de timeouts y reintentos (optimizada para VPS)
MESSAGE_TIMEOUT=25000
MAX_RETRIES=3
RETRY_DELAY=3000
MAX_CONCURRENT_MESSAGES=10
SESSION_CLEANUP_INTERVAL=180000

# Configuración de rendimiento para notificaciones (VPS optimizada)
ENABLE_PARALLEL_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=8
BATCH_DELAY=1200
HEALTH_CHECK_INTERVAL=30000
MAX_PARALLEL_BATCHES=2
MEMORY_THRESHOLD=6000

# Google Maps API
GOOGLE_MAPS_API_KEY=""

# Configuración para producción (VPS 2 CPUs, 8GB RAM)
NODE_ENV=production

# Configuración adicional de Node.js para VPS
# Agregar estos flags al comando de inicio:
# --max-old-space-size=6144 (6GB max heap)
# --optimize-for-size (optimizar para tamaño)
# --gc-interval=100 (garbage collection más frecuente)